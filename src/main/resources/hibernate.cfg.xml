        <mapping class="com.netcracker.students_project.entity.SubmissionEntity"/>
        <mapping class="com.netcracker.students_project.entity.TaskEntity"/>
        <mapping class="com.netcracker.students_project.entity.TaskTegsEntity"/>
        <mapping class="com.netcracker.students_project.entity.TegEntity"/>
        <mapping class="com.netcracker.students_project.entity.UserEntity"/>
